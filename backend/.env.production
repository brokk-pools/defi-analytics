# ===========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===========================================

# Server Configuration
PORT=3001
NODE_ENV=production
HOST=0.0.0.0

# Helius API Configuration (MAINNET)
# Get your production API key at: https://dev.helius.xyz
# Recommended: Pro tier for production workloads
HELIUS_API_KEY=08b7f44b-27d8-4fc4-9250-100d5e10a562
HELIUS_RPC=https://mainnet.helius-rpc.com/?api-key=${HELIUS_API_KEY}

# Database Configuration (PRODUCTION)
# Use strong credentials and secure connection for production
DATABASE_URL=postgres://orca_user:${POSTGRES_PASSWORD}@localhost:5432/orcadata_prod
DB_POOL_SIZE=20
DB_CONNECTION_TIMEOUT=5000
DB_IDLE_TIMEOUT=10000

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://:${REDIS_PASSWORD}@localhost:6379
REDIS_TTL=3600

# Orca Whirlpools Program ID (SAME FOR ALL NETWORKS)
# This is the official Orca Whirlpools program ID
ORCA_WHIRLPOOLS_PROGRAM_ID=whirLbMiicVdio4qvUfM5KAg6Ct8VwpYzGff3uctyCc

# Production Security Settings
LOG_LEVEL=info
MAX_REQUEST_SIZE=10mb

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
WEBHOOK_RATE_LIMIT_WINDOW_MS=60000
WEBHOOK_RATE_LIMIT_MAX_REQUESTS=1000

# CORS Configuration
CORS_ORIGIN=https://your-domain.com
CORS_CREDENTIALS=true

# Security Headers
HELMET_ENABLED=true
TRUST_PROXY=true

# Session Configuration
SESSION_SECRET=${SESSION_SECRET}
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict

# Webhook Security
WEBHOOK_SECRET=${WEBHOOK_SECRET}

# Monitoring & Health Checks
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *